@{
    ViewData["title"] = "Signo Zodiacal";
}

@model Application.ViewModels.FechaNacimiento

<div class="container">
    <h2>Ingresa tu fecha de nacimiento</h2>
    <form class="form-control" method="post" asp-controller="Home"  asp-action="SignoZodiacal">
        <div class="mb-3">
            <label class="form-label" asp-for="dia">Dia de nacimiento</label>
            <input type="number" step="any" class="form-control" asp-for="dia">
        </div>
        <div class="mb-3">
            <select class="form-select" asp-for="mes">
                <option value="1">Enero</option>
                <option value="2">Febrero</option>
                <option value="3">Marzo</option>
                <option value="4">Abril</option>
                <option value="5">Mayo</option>
                <option value="6">Junio</option>
                <option value="7">Julio</option>
                <option value="8">Agosto</option>
                <option value="9">Septiembre</option>
                <option value="10">Octubre</option>
                <option value="11">Noviembre</option>
                <option value="12">Diciembre</option>
            </select>
        </div>
        
        <button type="submit" class="btn btn-primary">Enviar</button>
    </form>

    <div class="mt-3">
        <h3>Tu signo zodiacal es: </h3>
        <h4>@ViewBag.mivida</h4>
    </div>
</div>